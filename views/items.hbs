<div class="row">
  <div class="col-md-12">
    <h2>Items <a href="/items/add" class="btn btn-success pull-right">Add Item</a></h2>
    <hr />
    {{#unless items}}
      <p>No items found.</p>
    {{else}}
      <table class="table table-responsive">
        <thead>
          <tr>
            <th>Item ID</th>
            <th>Title</th>
            <th>Post Date</th>
            <th>Price</th>
            <th>Category</th>
            <th>Published</th>
            <th></th> <!-- New column for "Remove" links -->
          </tr>
        </thead>
        <tbody>
          {{#each items}}
            <tr>
              <td>{{this.id}}</td>
              <td>{{this.title}}</td>
              <td>{{#formatDate this.postDate}}{{/formatDate}}</td>
              <td>$ {{this.price}}</td>
              <td><a href="/items?category={{this.categoryId}}">{{this.category}}</a></td>
              <td>{{this.published}}</td>
              <td>
                <form action="/items/delete/{{this.id}}" method="GET">
                  <button type="submit" class="btn btn-danger">Remove</button>
                </form>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{/unless}}
  </div>
</div>

<div class="col-md-12 text-center">
  <strong>{{message}}</strong>
</div>
