<div class="row">
  <section class="main col-md-9">
    {{#if data.item}}
      <article>
        <h2>{{data.item.title}}</h2>
        <img src="{{data.item.featureImage}}" alt="feature Image" style="width:50%" />
        <br /><br />
        {{{safeHTML data.item.body}}}
        <br /><br />
        <strong>Category:</strong> {{data.item.category}}<br />
        <strong>Price:</strong>{{data.item.price}}<br/>
        <strong>Last Updated:</strong> {{data.item.postDate}}
      </article>
    {{else}}
      <div class="col-md-12 text-center">
        <h2>{{data.message}}</h2>
        <p>Please try another Post / Category</p>
      </div>
    {{/if}}
  </section>

  <aside class="col-md-3">
    <br /><br />
    {{#if data.items}}
      <h4>Items</h4>
      <ul class="list-group">
        {{#each data.items}}
          <a href="/shop/{{id}}?category={{../viewingCategory}}" class="list-group-item">{{title}}</a>
        {{/each}}
      </ul>
    {{/if}}

    {{#if data.categories}}
      <h4>Categories</h4>
      <ul class="list-group">
        {{#each data.categories}}
          <a href="/shop?category={{id}}" class="list-group-item">{{category}}</a>
        {{/each}}
      </ul>
    {{/if}}
  </aside>
</div>
